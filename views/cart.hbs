<style>
  #naved{
    position: fixed;
    top: 0;
    z-index: 1;
  }
</style>
<h5 class="mt-3 text-light text-center">Cart</h5>
<div class="table-responsive d-flex justify-content-center">
<table class="table table-striped table-dark" style="max-width: 900px;">
  <thead>
    <tr>
      <th scope="col">Product Pic</th>
      <th scope="col">Product Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Buy</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <td><a href="/productdetails/{{this.product.id}}"><img src="{{this.product.imgUrl}}" style="height:100px;border-radius:5%"></a></td>
      <td><a href="/productdetails/{{this.product.id}}" style="text-decoration:none;color:white">{{this.product.title}}</a></td>
      <td>{{this.product.price}}</td>
      <td><button class="btn btn-primary mr-1">-</button> 1 <button class="btn btn-primary mr-1">+</button></td>
      <td> <form action="/buy/{{this.product.id}}" method="POST" style="display: inline-block"><button class="btn btn-primary mr-1">Buy</button></form>   <button class="btn btn-primary mr-1">Remove</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>