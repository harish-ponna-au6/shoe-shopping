<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
      #naved{
    top:0
  }
</style>
<h5>
</h5>
<br>
<br>
<div class="container-fluid">
    <div class="mt-3 bg-dark row d-flex justify-content-center flex-wrap">
        <div class="col-sm-10 col-md-5 col-lg-5 col-xl-3" style="display: inline-block;">
            <img width="100%" class="image-fluid" src="{{imgUrl}}" alt="">
        </div>

        <div style="color:white;" class="col-sm-10 col-md-5 col-lg-5 col-xl-3 ">
            <div class="col bg-dark" style="width: 100%;">
                <h5 class="text-center mt-4" style="margin-bottom:15px">{{title}}</h5>
                <p class="text-center mt-3">Price : {{price}}</p>
                <p class="text-center mt-3">Category : {{category}}</p>
                <p class="text-center mt-3">Rating : {{ratings}}</p>
                <div class="row d-flex flex-wrap justify-content-center">
                    <form action="/buy/{{id}}" method="POST"><button class="btn btn-primary m-2">Buy
                            Now</button></form>
                    <form action="/addtocart/{{id}}" method="POST" s><button class="btn btn-warning m-2">Add to
                            Cart</button></form>
                </div>
            </div>

        </div>
    </div>

</div>
<h2 class="text-light mt-5 mx-auto">Products you may also like</h2>
<div class="row d-flex justify-content-center">
    {{#each products}}
        <div class="card bg-dark text-light m-2" >
            <img class="card-img-top" src="{{this.imgUrl}}" style="height:160px; width:190px" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-text text-center" style="margin-bottom:15px">{{this.title}}</h5>
                <p class="card-text text-center m-0">Price : {{this.price}}</p>
                <p class="card-text text-center m-0">Category : {{this.category}}</p>
                <p class="card-text text-center m-0">Rating : {{this.ratings}}</p>
            </div>
            <div class="text-center">
                <form action="/productdetails/{{this._id}}" method="get">
                    <input type="submit" class="btn btn-primary btn-lg px-5" value="Buy">
                </form>
            </div>
    </div>
    {{/each}}
</div>